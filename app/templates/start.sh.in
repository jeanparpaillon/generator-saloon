#!/bin/sh
set -e

BASEDIR=$(cd $(dirname $0) && pwd)
ebindir=${BASEDIR}/ebin
depsdir=${BASEDIR}/deps/*/ebin
reldir=${BASEDIR}/rel
cmd="${BASEDIR}/$(basename $0) $*"

usage() {
    echo "Usage: $0 [-p XXXX]"
}

port=8080
while getopts ":p:" opt; do
    case $opt in
		p)
			shift $((OPTIND -1))
			port=$OPTARG
			;;
		:)
			usage
			exit 1
			;;
		*)
			usage
			exit 1
    esac
done

erl -sname agent \
    -pa ${ebindir} \
    -pa ${depsdir} \
    -{{saloon.name}} port "$port" \
    -s {{name}}

exit 0
